{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "./lib"
  },
  "include": ["./src/**/*"]
}
