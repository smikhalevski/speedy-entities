{
  "name": "speedy-entities",
  "version": "3.0.1",
  "description": "The fastest XML/HTML entities decoder.",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "node src/scripts/build-entities.ts && tsc --project tsconfig.build.json && cp package.json README.md LICENSE.txt lib/ && cd lib && npm pkg delete scripts devDependencies",
    "clean": "rimraf lib docs coverage",
    "test": "vitest run",
    "perf": "toofast",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/speedy-entities.git"
  },
  "keywords": [
    "entities",
    "html-entities",
    "decoder",
    "encoder"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/speedy-entities/issues"
  },
  "homepage": "https://github.com/smikhalevski/speedy-entities#readme",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "entities": "^6.0.1",
    "he": "^1.2.0",
    "html-entities": "^2.6.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "toofast": "^3.0.3",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
