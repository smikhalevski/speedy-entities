{
  "name": "entities",
  "version": "1.0.0",
  "description": "The XML/HTML entities decoder.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "set -e; npm run encode-data; tsc; npm run rollup; npm run terser",
    "encode-data": "node encode-data.js",
    "rollup": "rollup --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve --plugin @rollup/plugin-json",
    "terser": "terser --compress --mangle toplevel --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./src/main/gen ./lib",
    "test": "jest --detectOpenHandles",
    "perf": "[ -d ./lib ] || npm run build; node --expose-gc --max-old-space-size=4096 ./src/test/perf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/entities.git"
  },
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/entities/issues"
  },
  "homepage": "https://github.com/smikhalevski/entities#readme",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "chalk": "^4.1.1",
    "entities": "^2.2.0",
    "jest": "^27.0.2",
    "nodemark": "^0.3.0",
    "rollup": "^2.50.5",
    "terser": "^5.7.0",
    "ts-jest": "^27.0.2",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "tokenizer-dsl": "^1.0.1"
  }
}
